{
	"compilerOptions": {
		"experimentalDecorators": true,
		"target": "es2022",
		"module": "commonjs",
		"rootDir": "./src",
		"outDir": ".",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"removeComments": true,
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"allowJs": true,
		"declaration": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
